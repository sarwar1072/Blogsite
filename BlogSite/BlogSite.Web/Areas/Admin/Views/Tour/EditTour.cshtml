@model CreateTour
@{
    ViewData["Title"] = "EditTour";
}

<form asp-area="Admin" asp-controller="Tour" asp-action="EditTour" asp-antiforgery="true"
      method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div class="col-12 border-bottom ">
            <h2 class="text-warning">@Model.TourName</h2>
        </div>
        <div class="col-8 pt-4">
            <input type="hidden" asp-for="TourId" />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TourName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TourName" class="form-control" />
                    <span asp-validation-for="TourName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Destination"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Destination" class="form-control" />
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MaxiMumPeople"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MaxiMumPeople" class="form-control" />
                    <span asp-validation-for="MaxiMumPeople" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MiniMumPeople"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="MiniMumPeople" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Requirements"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Requirements" class="form-control" />
                    <span asp-validation-for="Requirements" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CancellationTerm"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CancellationTerm" class="form-control" />
                    <span asp-validation-for="CancellationTerm" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpotsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="SpotsAvailable" class="form-control" />
                    <span asp-validation-for="SpotsAvailable" class="text-danger"></span>
                </div>
            </div>
            @* <div class="form-group row">
                <div class="col-4">
                    Category
                </div>
                <div class="col-sm-8">
                    <select asp-for="CategoryId" asp-items="@Model.ListOfCategory()" class="form-control">
                        <option>Please Select One</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Category
                </div>
                <div class="col-sm-8">
                    <select asp-for="CoverTypeId" asp-items="@Model.ListOfCoverType()" class="form-control">
                        <option>Please Select One</option>
                    </select>
                    <span asp-validation-for="CoverTypeId" class="text-danger"></span>
                </div>
            </div> *@

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CoverPhotoUrl" class="control-label">Form File</label>
                </div>
                <div class="col-8">

                    <input type="file" asp-for="CoverPhotoUrl" class="form-control" style="border:none;padding: .375rem 0;" />
                    <span asp-validation-for="CoverPhotoUrl" class="text-danger"></span>
                    <br />

                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">

                </div>
                <div class="col-8">
                    <input type="submit" value="Save" class="btn btn-primary" />&nbsp;
                    <a asp-action="Index" asp-controller="Tour" class="btn btn-warning">Cancel</a>
                </div>
            </div>
        </div>
        @if (Model != null && !string.IsNullOrEmpty(Model.TourUrl))
        {

            <input type="hidden" asp-for="TourUrl" />
            <img id="itemImage" src="@Model.TourUrl" width="25%" height="30%" style="border-radius:5px; border:1px solid #bbb9b9 " />

        }

    </div>
</form>

@section PageScript
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
