@model CreateHotelModel
@{
    ViewData["Title"] = "AddHotel";
}
@section PageStyle {
    <link href="~/FloraEditorFile/CSS/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
}

<div class="container p-5 my-5 border">
    <form asp-action="AddHotel" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location" class="control-label">Location</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="formFile" class="control-label">Hotel photo</label>
            <input asp-for="formFile" type="file" class="form-control" />
            <span asp-validation-for="formFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PricePerNight" class="control-label">Price Per Night</label>
            <input asp-for="PricePerNight" class="form-control" />
            <span asp-validation-for="PricePerNight" class="text-danger"></span>
        </div>

        @* <div class="form-group">
            <label class="form-label">Facilities</label>
            <textarea class="form-control" id="content" asp-for="Hotelfacilities"></textarea>
        </div>
        <div class="form-group">
            <label class="form-label">Policies</label>
            <textarea class="form-control" id="content" asp-for="Policy"></textarea>
        </div> *@
        <div class="form-group">
            <label asp-for="AvailableRooms" class="control-label">AvailableRooms</label>
            <input asp-for="AvailableRooms" class="form-control" />
            <span asp-validation-for="AvailableRooms" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ListofImages" class="control-label">Tour Images</label>
            <input asp-for="ListofImages" type="file" multiple class="form-control" />
            <span asp-validation-for="ListofImages" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


@section PageScript
{
    <script type="text/javascript" src="~/FloraEditorFile/JS/froala_editor.pkgd.min.js"></script>

    <script>
        var editor = new FroalaEditor('#content', {
            toolbarButtons: [['bold', 'italic', 'underline', 'strikeThrough', 'subscript', 'superscript'], ['fontFamily', 'fontSize', 'textColor', 'backgroundColor'], ['inlineClass', 'inlineStyle', 'clearFormatting']]
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}