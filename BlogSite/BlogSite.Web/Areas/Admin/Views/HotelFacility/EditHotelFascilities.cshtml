@model EditHotelfacility
@{
    ViewData["Title"] = "EditHotelFascilities";
}

@section PageStyle {
    <link href="~/FloraEditorFile/CSS/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
}

<div class="container p-5 my-5 border">
    <form asp-action="EditHotelFascilities" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label class="form-label">Business Facilities</label>
            <textarea class="form-control" id="content" asp-for="BusinessFacilities"></textarea>
        </div>
        <div class="form-group">
            <label class="form-label">Fitness Facilities</label>
            <textarea class="form-control" id="content" asp-for="FitnessFacilities"></textarea>
        </div>
       
        <div class="form-group">
            <label class="form-label">Food Facilities</label>
            <textarea class="form-control" id="content" asp-for="FoodFacilities"></textarea>
        </div>
        <div class="form-group">
            <label class="form-label">General</label>
            <textarea class="form-control" id="content" asp-for="General"></textarea>
        </div>

        <div class="form-group">
            <label class="form-label">Indoor Facitilies</label>
            <textarea class="form-control" id="content" asp-for="IndoorFacitilies"></textarea>
        </div>
        <div class="form-group">
            <label class="form-label">Parking</label>
            <textarea class="form-control" id="content" asp-for="Parking"></textarea>
        </div>
        <div class="form-group">
            <label class="form-label">Policies</label>
            <textarea class="form-control" id="content" asp-for="Policies"></textarea>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


@section PageScript
{
    <script type="text/javascript" src="~/FloraEditorFile/JS/froala_editor.pkgd.min.js"></script>

    <script>
        var editor = new FroalaEditor('#content', {
            toolbarButtons: [['bold', 'italic', 'underline', 'strikeThrough', 'subscript', 'superscript'], ['fontFamily', 'fontSize', 'textColor', 'backgroundColor'], ['inlineClass', 'inlineStyle', 'clearFormatting']]
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

