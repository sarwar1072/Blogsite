@model VisaViewModel

    
<div class="container d-flex justify-content-center align-items-center mt-5">
    <form method="post" asp-action="VisaList" asp-controller="Visa"
          class="p-4 bg-white rounded shadow-lg" style="max-width: 500px; width: 100%;">

        <h3 class="text-center mb-4 fw-bold">Search Visa</h3>

        <div class="mb-3">
            <label for="VisaDestination" class="form-label fw-bold">Visa Destination</label>
            <select asp-for="Destination" asp-items="Model.VisaDropdownList()"
                    class="form-select" id="visaDestination" style="border-radius: 8px;">
                <option value="">Please Select One</option>
            </select>
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100" style="border-radius: 8px;">
            <i class="fas fa-search me-2"></i> Search Visa
        </button>
    </form>
</div>

<div class="container-fluid px-0 mt-5">
    <!-- Hero Section -->
    <header class="hero bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4 fw-bold">Apply for Your Visa Easily & Securely</h1>
            <p class="lead">Fast approvals, hassle-free process, and expert guidance for your travel needs.</p>
            <a href="#apply-now" class="btn btn-light btn-lg mt-3">Apply Now</a>
        </div>
    </header>

    <!-- Key Benefits -->
    <section class="container text-center my-5">
        <h2 class="fw-bold mb-4">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-4">
                <i class="fas fa-globe fa-3x text-primary"></i>
                <h4 class="mt-3">Global Reach</h4>
                <p>We process visas for multiple countries worldwide.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-clock fa-3x text-primary"></i>
                <h4 class="mt-3">Fast Processing</h4>
                <p>Get your visa approved in as little as 48 hours.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-shield-alt fa-3x text-primary"></i>
                <h4 class="mt-3">Secure & Reliable</h4>
                <p>100% secure transactions and verified applications.</p>
            </div>
        </div>
    </section>

    <!-- Step-by-Step Process -->
    <section class="bg-light py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">How It Works?</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm p-3">
                        <h4>Step 1</h4>
                        <p>Fill out the online application form.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm p-3">
                        <h4>Step 2</h4>
                        <p>Submit the required documents.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm p-3">
                        <h4>Step 3</h4>
                        <p>Receive your visa and get ready to travel!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="container my-5">
        <h2 class="fw-bold text-center mb-4">What Our Customers Say</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card p-4 text-center shadow-sm">
                    <p>“The process was so smooth! I got my visa in just 3 days.”</p>
                    <small>- Sarah M.</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center shadow-sm">
                    <p>“Amazing customer service and fast approval. Highly recommended!”</p>
                    <small>- James R.</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 text-center shadow-sm">
                    <p>“Very professional and efficient. Best visa service out there!”</p>
                    <small>- Maria T.</small>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-light py-5">
        <div class="container">
            <h2 class="fw-bold text-center mb-4">Frequently Asked Questions</h2>
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How long does it take to process my visa?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Most visas are processed within 48-72 hours, but it depends on the country.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What documents are required?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            A valid passport, passport-sized photos, and additional documents depending on your destination.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section id="apply-now" class="text-center py-5 bg-primary text-white">
        <h2 class="fw-bold">Ready to Travel?</h2>
        <p>Apply for your visa today and start your journey!</p>
        <a href="#" class="btn btn-light btn-lg">Get Started</a>
    </section>
</div>



