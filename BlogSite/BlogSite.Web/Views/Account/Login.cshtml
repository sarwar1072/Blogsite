@model LoginModel
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="main-wrapper d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-xl-6">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    <div class="row g-0">
                        <!-- Left Side Image or Background -->
                        <div class="col-md-4 d-none d-md-block bg-primary text-white d-flex align-items-center justify-content-center">
                            <div class="p-3 text-center">
                                <h4 class="fw-bold">Welcome Back!</h4>
                                <p class="small">Login to continue</p>
                            </div>
                        </div>

                        <!-- Login Form -->
                        <div class="col-md-8">
                            <div class="p-4">
                                <h5 class="text-center fw-semibold mb-4">Sign in to your account</h5>

                                <form class="needs-validation" method="post" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl" asp-antiforgery="true" enctype="multipart/form-data" novalidate>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <!-- Email Input -->
                                    <div class="mb-3">
                                        <label for="userEmail" class="form-label fw-semibold">Email address</label>
                                        <input asp-for="Email" type="email" class="form-control" id="userEmail" placeholder="Enter your email" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <!-- Password Input -->
                                    <div class="mb-3">
                                        <label for="userPassword" class="form-label fw-semibold">Password</label>
                                        <input asp-for="Password" type="password" class="form-control" id="userPassword" autocomplete="current-password" placeholder="Enter your password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <!-- Remember Me Checkbox -->
                                    <div class="form-check mb-3">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="authCheck">
                                        <label class="form-check-label" for="authCheck">Remember me</label>
                                    </div>

                                    <!-- Login Button -->
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary text-white fw-bold">Login</button>
                                    </div>

                                    <!-- Register Link -->
                                    <div class="text-center mt-3">
                                        <a class="text-decoration-none text-primary fw-semibold" asp-route-returnUrl="@Context.Request.Path" asp-area="" asp-controller="Account" asp-action="Register">New here? Register</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>

@section MainLayoutScript {
    <partial name="_ValidationScriptsPartial" />
}
