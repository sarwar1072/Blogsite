@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="main-wrapper d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-xl-6">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    <div class="row g-0">
                        <!-- Left Side (Hidden on Mobile) -->
                        <div class="col-md-4 d-none d-md-flex align-items-center justify-content-center bg-primary text-white">
                            <div class="p-3 text-center">
                                <h4 class="fw-bold">Join Us!</h4>
                                <p class="small">Create an account to get started.</p>
                            </div>
                        </div>

                        <!-- Register Form -->
                        <div class="col-md-8">
                            <div class="p-4">
                                <h5 class="text-center fw-semibold mb-4">Create Your Account</h5>

                                <form class="needs-validation" id="registerForm" asp-action="Register" asp-controller="Account"
                                    asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                                    
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row mb-3">
                                        <!-- First Name -->
                                        <div class="col-md-6">
                                            <label asp-for="FirstName" class="form-label fw-semibold">First Name</label>
                                            <input asp-for="FirstName" class="form-control" placeholder="First name" required>
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <!-- Last Name -->
                                        <div class="col-md-6">
                                            <label asp-for="LastName" class="form-label fw-semibold">Last Name</label>
                                            <input asp-for="LastName" class="form-control" placeholder="Last name" required>
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="row mb-3">
                                        <!-- Password -->
                                        <div class="col-md-6">
                                            <label asp-for="Password" class="form-label fw-semibold">Password</label>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <!-- Confirm Password -->
                                        <div class="col-md-6">
                                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Pass</label>
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm pass" required>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="d-grid">
                                        <button id="registerSubmit" type="submit" class="btn btn-primary text-white fw-bold">Sign Up</button>
                                    </div>

                                    <!-- Login Link -->
                                    <div class="text-center mt-3">
                                        <a class="text-decoration-none text-primary fw-semibold" asp-area="" asp-controller="Account" asp-action="Login">
                                            Already a user? Sign in
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>

@section MainLayoutScript {
    <partial name="_ValidationScriptsPartial" />
}
