@model TourViewModel
@* @{
    Layout = "_NewLayout";
} *@
@section PageStyles {
    <link href="~/css/carddesigntour.css" rel="stylesheet" />

}

          

                      

                             
<div class="container mt-5">
    <div class="row">
        <!-- Tour Sidebar (Filter) -->
        <div class="col-md-3">
            <h5 class="mb-4">Filter By</h5>
            <div class="card p-3 mb-4">
                <label for="priceRange" class="form-label">Price Range</label>
                <input type="range" class="form-range" id="priceRange" min="0" max="30000">
                <div class="d-flex justify-content-between mt-2">
                    <span>BDT 0</span>
                    <span>BDT 30,000</span>
                </div>
            </div>
            <div class="card p-3 mb-4">
                <label class="form-label">Duration</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="less6Hours">
                    <label class="form-check-label" for="less6Hours">Less than 6 hours</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="6to12Hours">
                    <label class="form-check-label" for="6to12Hours">6 - 12 hours</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="12to24Hours">
                    <label class="form-check-label" for="12to24Hours">12 - 24 hours</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="24PlusHours">
                    <label class="form-check-label" for="24PlusHours">24+ hours</label>
                </div>
            </div>
            <div class="card p-3">
                <label class="form-label">Time</label>
                <div class="d-flex justify-content-around">
                    <span class="badge bg-light text-dark">00-06</span>
                    <span class="badge bg-light text-dark">06-12</span>
                    <span class="badge bg-light text-dark">12-18</span>
                    <span class="badge bg-light text-dark">18-00</span>
                </div>
            </div>
        </div>

        <!-- Tour Listings -->
        <div class="col-md-9">
            <h5>@Model.Count places found</h5>
            <!-- Single Tour Card -->
            @foreach (var item in Model.TourList)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="row g-0">
                        <!-- Tour Image Section -->
                        <div class="col-md-4">
                            <img src="@item.TourUrl" class="img-fluid rounded-start" alt="@item.TourName">
                        </div>

                        <!-- Tour Info Section -->
                        <div class="col-md-8">
                            <div class="card-body">
                                <!-- Tour Title -->
                                <div class="d-flex justify-content-between">
                                    <h5 class="text-dark">@item.TourName - Package Tour with Flight and Hotel</h5>
                                    <div class="text-end">
                                        <p class="mb-0 text-muted small">Starting From</p>
                                        <h5 class="text-primary mb-0">BDT @item.Price</h5>
                                        <p class="mb-0 text-muted small">Per Person</p>
                                    </div>
                                </div>

                                <!-- Location -->
                                <p class="text-muted mb-2">
                                    <i class="fa fa-map-marker-alt me-2 text-primary"></i>@item.Destination
                                </p>

                                <!-- Duration and People -->
                                <p class="mb-2">
                                    <i class="fa fa-clock me-2 text-primary"></i>3 days &nbsp;&nbsp;
                                    <i class="fa fa-users me-2 text-primary"></i>From @item.MiniMumPeople to @item.MaxiMumPeople people
                                </p>

                                <!-- Cancellation Terms -->
                                <p class="text-muted mb-2">
                                    <i class="fa fa-info-circle me-2 text-primary"></i>@item.CancellationTerm
                                </p>

                                <!-- Requirements -->
                                <p class="text-muted mb-2">
                                    <i class="fa fa-file-alt me-2 text-primary"></i>Requirements: <span>@item.Requirements</span>
                                </p>

                                <!-- Action Section -->
                                <div class="d-flex align-items-center">
                                    <a href="@Url.Action("Details", "Home", new { id = item.Id })" class="btn btn-primary ms-auto">Details</a>
                                </div>

                                <!-- Spots Available -->
                                <div class="mt-2">
                                    <span class="badge bg-secondary">
                                        <i class="fa fa-map-signs me-2"></i>Spots Available: @item.SpotsAvailable
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- End of Single Tour Card -->
        </div>
    </div>
</div>
