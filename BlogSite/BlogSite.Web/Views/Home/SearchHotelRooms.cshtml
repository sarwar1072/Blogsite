<div class="container card p-4 my-4">
    <div class="row g-4">
        <!-- Carousel Section -->
        <div class="col-lg-8 col-md-12">
            <div id="tourCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @if (Model?.images != null && Model.images.Any())
                    {
                        @for (int i = 0; i < Model.images.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.images[i].ImageUrl" class="d-block w-100 rounded" alt="@Model.images[i].AlternativeText">
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="text-muted">No images available.</p>
                        </div>
                    }
                </div>
                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#tourCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#tourCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <!-- Details Section -->
        <div class="col-lg-4 col-md-12">
            <div class="p-3 border rounded shadow-sm">
                <h4 class="fw-bold">@Model.Name</h4>
                <p class="mb-2"><strong>Destination:</strong> @Model.Location</p>
                <p class="mb-2"><strong>Price:</strong> @Model.PricePerNight</p>
                <p class="mb-0"><strong>Spots Available:</strong> @Model.AvailableRooms</p>
            </div>
        </div>
    </div>
</div>

<div class="container p-3 my-4">
    <!-- Room Details Section -->
    <div class="row g-4">
        <!-- Room Details -->
        <div class="col-lg-8 col-md-12">
            <div class="mb-4">
                <h4 class="fw-bold">Room Details</h4>
                <span class="text-muted">For @Model.NumberOfGuests Guest, for @Model.night Nights</span>
            </div>
            @for (int i = 0; i < Model.rooms.Count; i++)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="row g-0">
                        <!-- Room Images -->
                        <div class="col-md-5">
                            <img src="@Model.rooms[i].RoomPhUrl" class="img-fluid rounded-start" alt="No photo found">
                        </div>
                        <!-- Room Info -->
                        <div class="col-md-7">
                            <div class="card-body">
                                <h5 class="card-title">Master Suite</h5>
                                <p class="card-text"><strong>King</strong> | Maximum Room Capacity: <strong>@Model.rooms[i].Capacity</strong></p>
                                <a href="#" class="text-decoration-underline text-primary">View Room Details</a>
                                <p class="text-danger mt-2 fw-semibold">Hurry Up! Only 5 Rooms Left</p>
                                <p class="text-muted">Option No: <strong>@Model.rooms[i].RoomNumber</strong></p>
                                <p class="text-muted">Room Type: <strong>@Model.rooms[i].RoomType</strong></p>
                                <p class="text-success fw-bold">Price: @Model.rooms[i].Price</p>
                                <ul class="list-unstyled mt-2">
                                    <li>✔ Air Conditioning</li>
                                    <li>✔ Safe/Locker</li>
                                    <li>✔ Ceiling Fan</li>
                                    <li>✔ Toiletries</li>
                                </ul>
                                <a href="@Url.Action("Roombook", "Home", new { Id = Model.rooms[i].Id })" class="btn btn-outline-primary btn-sm mt-2">
                                    Show All Amenities
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pricing Summary -->
        <div class="col-lg-4 col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title fw-bold">Pricing Summary</h4>
                    <p class="card-text text-muted">Add Rooms to Continue</p>
                    <button class="btn btn-primary w-100" disabled>Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>


