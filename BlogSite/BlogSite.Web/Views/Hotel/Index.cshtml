@model HotelModelView
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="container d-flex justify-content-center align-items-center p-5">
    <form method="post" asp-action="SearchHotel" asp-controller="Hotel" class="p-4 bg-white rounded shadow-lg" style="max-width: 600px; width: 100%;">
        <h3 class="text-center mb-4">Search Hotels</h3>

        <!-- Location -->
        <div class="form-group position-relative mb-3">
            <label for="hotelLocation" class="form-label fw-bold">Location</label>
            <input type="text"
                   class="form-control"
                   id="hotelLocation"
                   name="location"
                   placeholder="Enter location"
                   autocomplete="off"
                   value="@Model.Location"
                   style="border-radius: 8px;">
            <div id="HotelLocationList"
                 class="dropdown-menu shadow-sm p-2"
                 style="display: none; position: absolute; width: 100%; border-radius: 8px; z-index: 1050;">
                <!-- Suggested destinations will be dynamically appended here -->
            </div>
        </div>

        <!-- Check-in Date -->
        <div class="form-group mb-3">
            <label for="checkInDate" class="form-label fw-bold">Check-in Date</label>
            <input type="date"
                   class="form-control"
                   id="checkInDate"
                   name="checkInDate"
                   value="@Model.CheckInDate.ToString("yyyy-MM-dd")"
                   style="border-radius: 8px;">
        </div>

        <!-- Check-out Date -->
        <div class="form-group mb-3">
            <label for="checkOutDate" class="form-label fw-bold">Check-out Date</label>
            <input type="date"
                   class="form-control"
                   id="checkOutDate"
                   name="checkOutDate"
                   value="@Model.CheckOutDate.ToString(" yyyy-MM-dd")"
                   style="border-radius: 8px;">
        </div>

        <!-- Number of Guests -->
        <div class="form-group mb-4">
            <label for="numberOfGuests" class="form-label fw-bold">Number of Guests</label>
            <input type="number"
                   id="numberOfGuests"
                   name="NumberOfGuests"
                   class="form-control"
                   min="1"
                   required
                   value="@Model.NumberOfGuests"
                   style="border-radius: 8px;">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100" style="border-radius: 8px;">
            <i class="fas fa-search me-2"></i> Search Hotel
        </button>
    </form>
</div>

<div class="container my-5">
    <h3 class="text-primary mb-4">Popular Hotels</h3>
    <div class="row">
        @if (Model.ListOfHotel != null && Model.HotelList.Any())
        {
            foreach (var hotel in Model.ListOfHotel())
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <a href="@Url.Action("SearchHotelRooms", "Hotel", new
                        {
                            hotelId = hotel.Id,
                            location = HttpContextAccessor.HttpContext.Session.GetString("Location") ?? "Dhaka",
                            checkInDate = HttpContextAccessor.HttpContext.Session.GetString("CheckInDate") ?? DateTime.Now.AddDays(2).ToString("yyyy-MM-dd"),
                            checkOutDate = HttpContextAccessor.HttpContext.Session.GetString("CheckOutDate") ?? DateTime.Now.AddDays(7).ToString("yyyy-MM-dd"),
                            numberOfGuests = HttpContextAccessor.HttpContext.Session.GetInt32("NumberOfGuests") ?? 2
                        })" class="text-decoration-none">
                            <img src="@hotel.HotelUrl" class="card-img-top" alt="@hotel.Name">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title text-center">
                                <a href="@Url.Action("SearchHotelRooms", "Hotel", new
                                {
                                    hotelId = hotel.Id,
                                    location = HttpContextAccessor.HttpContext.Session.GetString("Location") ?? "Dhaka",
                                    checkInDate = HttpContextAccessor.HttpContext.Session.GetString("CheckInDate") ?? DateTime.Now.AddDays(2).ToString("yyyy-MM-dd"),
                                    checkOutDate = HttpContextAccessor.HttpContext.Session.GetString("CheckOutDate") ?? DateTime.Now.AddDays(7).ToString("yyyy-MM-dd"),
                                    numberOfGuests = HttpContextAccessor.HttpContext.Session.GetInt32("NumberOfGuests") ?? 2
                                })" class="text-dark text-decoration-none">
                                    @hotel.Name
                                </a>
                            </h5>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-center">No hotels available.</p>
            </div>
        }
    </div>
</div>


