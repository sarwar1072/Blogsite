@using Microsoft.AspNetCore.Identity
@using Blogsite.Infrastructure.Entities.Membership
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<style>
    .nav-link.btn:hover {
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }
</style>

<ul class="navbar-nav bg-secondary">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Display User Greeting -->
        <li class="nav-item">
            <p class="nav-link text-white stylish-font" title="User">Hello @User.Identity.Name.Split('@')[0]</p>
        </li>

        <!-- Logout Button -->
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link bg-secondary text-white btn-block">Logout</button>
            </form>
        </li>
    }
    else
    {
        <!-- Register Button -->
        <li class="nav-item">
            <a class="nav-link btn btn-secondary text-white btn-block" asp-area="" asp-action="Register" asp-controller="Account">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </li>

        <!-- Login Button -->
        <li class="nav-item">
            <a class="nav-link btn btn-secondary text-white btn-block" asp-area="" asp-action="Login" asp-controller="Account">
                <i class="fas fa-sign-in-alt"></i> Log In
            </a>
        </li>
    }
</ul>



