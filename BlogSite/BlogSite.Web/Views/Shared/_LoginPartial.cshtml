@using Microsoft.AspNetCore.Identity
@using Blogsite.Infrastructure.Entities.Membership
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav  rounded-3 p-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Display User Greeting -->
        <li class="nav-item">
            <span class="nav-link text-white fw-semibold">👋 Hello, @User.Identity.Name.Split('@')[0]</span>
        </li>

        <!-- Logout Button -->
        <li class="nav-item">
            <form class="d-inline btn" asp-area="" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-light w-100">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <!-- Register Button -->
        <li class="nav-item ">
            <a class="btn btn-danger w-100 mb-2" asp-area="" asp-action="Register" asp-controller="Account">
                <i class="fas fa-user-plus"></i> Register
            </a>
        </li>

        <!-- Login Button -->
        <li class="nav-item ml-2">
            <a class="btn btn-warning text-dark w-100" asp-area="" asp-action="Login" asp-controller="Account">
                <i class="fas fa-sign-in-alt"></i> Log In
            </a>
        </li>
    }
</ul>
