<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogSite.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogSite.Web.styles.css" asp-append-version="true" />
    <link href="~/css/footer.css" rel="stylesheet" />
    <link href="~/css/searchcss.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    @RenderSection("PageStyles", false)

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Booking.com</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sign In</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

<!-- Search Section -->
    <section class="search-section  text-white py-5 " id="content">
        <div class="container text-center">
            <h1>Find your next stay</h1>
            <p>Search low prices on hotels, homes, and much more...</p>
        <div class="container">
            <h2>Search Options</h2>

                <div class="search-tabs">
                    <div class="search-tab active " id="btnTour">
                        <div class="icon-and-text">
                            🏝
                            <span>Tour</span>
                        </div>
                        <div class="active-indicator"></div>
                    </div>
                    <div class="search-tab " id="btnFlight">
                        <div class="icon-and-text">
                            ✈
                            <span>Flight</span>
                        </div>
                        <div class="active-indicator" style="visibility: hidden;"></div>
                    </div>
                    <div class="search-tab" id="btnHotel">
                        <div class="icon-and-text">
                            🏨
                            <span>Hotel</span>
                        </div>
                        <div class="active-indicator" style="visibility: hidden;"></div>
                    </div>
                </div>

                <!-- Placeholder for tab content -->
                <div id="tourContent" class="tab-content ">
                    <h3>Tour Search</h3>
                    <!-- Tour search form content goes here -->
                </div>
                <div id="flightContent" class="tab-content ">
                    <h3>Flight Search</h3>
                    <!-- Flight search form content goes here -->
                </div>

                <div id="hotelContent" class="tab-content">
                    <h3>Hotel Search</h3>
                    <!-- Hotel search form content goes here -->
                </div>

        
      <!-- for search  tour"-->
    <div id="tourSearch" class="search-form mt-4" style="display: none;">
        <h3>Search for Tours</h3>
         <form method="post" asp-action="TourList" asp-controller="Home">
            <div class="form-group position-relative">
                <label for="tourDestination">Destination</label>
                <input type="text" class="form-control" id="tourDestination" name="destination" placeholder="Enter destination" autocomplete="off">
                <!-- Dropdown for tour destination suggestions -->
                <div id="destinationList" class="dropdown-menu" style="display: none; position: absolute; width: 100%;">
                    <!-- Suggested destinations will be appended here dynamically -->
                </div>
            </div>
           <button type="submit" class="btn btn-primary" id="searchButton" >Search Tour</button>
        </form>

            <partial name="Search" />
                   
      </div>

        <!-- Hotel Search Form -->
    <div id="hotelSearch" class="search-form mt-4" style="display: none;">
        <h3>Search for Hotels</h3>
        <form method="get" asp-action="SearchHotel" asp-controller="Hotel">
            <div class="form-group">
                <label for="hotelLocation">Location</label>
                <input type="text" class="form-control" id="hotelLocation" name="location" placeholder="Enter location">
            </div>
            <div class="form-group">
                <label for="checkInDate">Check-in Date</label>
                <input type="date" class="form-control" id="checkInDate" name="checkInDate">
            </div>
            <div class="form-group">
                <label for="checkOutDate">Check-out Date</label>
                <input type="date" class="form-control" id="checkOutDate" name="checkOutDate">
            </div>
            <button type="submit" class="btn btn-secondary">Search Hotel</button>
        </form>
    </div>

            <!-- Flight Search Form -->
        <div id="flightSearch" class="search-form mt-4" style="display: none;">
        <h3>Search for Flights</h3>
        <form method="get" asp-action="SearchFlight" asp-controller="Flight">
            <div class="form-group">
                <label for="departureCity">Departure City</label>
                <input type="text" class="form-control" id="departureCity" name="departureCity" placeholder="Enter departure city">
            </div>
            <div class="form-group">
                <label for="arrivalCity">Arrival City</label>
                <input type="text" class="form-control" id="arrivalCity" name="arrivalCity" placeholder="Enter arrival city">
            </div>
            <div class="form-group">
                <label for="flightDate">Flight Date</label>
                <input type="date" class="form-control" id="flightDate" name="flightDate">
            </div>
            <button type="submit" class="btn btn-success">Search Flight</button>
        </form>
       </div>
       </div>        
    </div>
    </section>

        <!-- Bootstrap JS -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <partial name="_footer" />
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/searchdropdown.js"></script>
    <script src="~/js/searchjs.js"></script>
    @RenderSection("MainLayoutScript", false)

@*     @await RenderSectionAsync("Scripts", required: false)
 *@   
</body>
</html>
