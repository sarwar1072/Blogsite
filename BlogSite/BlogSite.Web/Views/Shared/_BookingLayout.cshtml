@* @using Microsoft.AspNetCore.Identity
@using Blogsite.Infrastructure.Entities.Membership
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booking.com</title>  
    <link rel="stylesheet" href="~/BlogSite.Web.styles.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />

    <link href="~/css/footer.css" rel="stylesheet" />  
    <link href="~/css/cssforlayout.css" rel="stylesheet" />
    <link href="~/css/navdesign.css" rel="stylesheet" />
    <link href="~/css/sectionlayoutcss.css" rel="stylesheet" />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar {
            width: 250px;
            background: white;
            height: 100vh;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .sidebar .nav-link {
                color: #333;
                font-weight: 500;
                padding: 12px;
            }

                .sidebar .nav-link.active {
                    background: #dc3545;
                    color: white;
                    border-radius: 5px;
                }

        .tab-btn {
            border: 2px solid #dc3545;
            padding: 12px;
            width: 110px;
            text-align: center;
            border-radius: 10px;
            color: #dc3545;
            font-weight: 500;
        }

            .tab-btn.active {
                background: #dc3545;
                color: white;
            }

        .booking-section {
            border-radius: 10px;
            background: white;
            padding: 15px;
        }
    </style>

    @RenderSection("PageStyles", false)
</head>
<body>
    <!-- Navbar -->

    <partial name="_NavPartial" />

    

        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-3 p-3">
                    <div class="sidebar">
                        <nav class="nav flex-column">
                            <a href="#" class="nav-link"><i class="bi bi-person-circle me-2"></i> My Account</a>
                            <a href="#" class="nav-link"><i class="bi bi-people me-2"></i> Travellers</a>
                            <a href="#" class="nav-link active"><i class="bi bi-calendar-check me-2"></i> My Bookings</a>
                            <a href="#" class="nav-link"><i class="bi bi-lock me-2"></i> Change Password</a>
                            <a href="#" class="nav-link"><i class="bi bi-headset me-2"></i> Support</a>
                            <a href="#" class="nav-link"><i class="bi bi-box-arrow-left me-2"></i> Logout</a>
                        </nav>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9">
                    <div class="row">
                        <!-- Booking Type Tabs -->
                        <div class="col-12 d-flex gap-2 mb-3">
                            <div class="tab-btn">Flight</div>
                            <div class="tab-btn">Hotel</div>
                            <div class="tab-btn active">Holidays</div>
                            <div class="tab-btn">Visa</div>
                            <div class="tab-btn">Umrah</div>
                        </div>
                    </div>

                    <!-- Current & Previous Bookings -->
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex border rounded p-2">
                                <button class="btn btn-light flex-grow-1">Current Bookings</button>
                                <button class="btn btn-danger text-white flex-grow-1">Previous Bookings</button>
                            </div>
                        </div>
                    </div>

                    <!-- Booking Content -->
                    <div class="row mt-3">
                        <div class="col-12 booking-section">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="fw-bold">Previous Bookings</h5>
                                <span class="text-muted">0 Booking Found</span>
                                <button class="btn btn-outline-dark">
                                    <i class="bi bi-funnel"></i> Oldest First
                                </button>
                            </div>
                            <div class="text-center p-5">
                                <img src="https://via.placeholder.com/200" class="img-fluid" alt="No Bookings">
                                <p class="text-muted mt-3">No previous bookings found.</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
   

    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <partial name="_footer" />

   
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navdesignjs.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("MainLayoutScript", false)


   </body>
</html> 

 

