<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booking.com</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    @RenderSection("PageStyles", false)

    <style>
        /* Sidebar styles */
        .sidebar {
            background: white;
            box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.1);
            min-height: 100vh;
        }

        /* Hide sidebar by default on small screens */
        @@media (max-width: 992px) {
            .sidebar {
                position: fixed;
                left: -260px;
                top: 0;
                height: 100vh;
                width: 250px;
                transition: all 0.3s ease-in-out;
                z-index: 1050;
            }
            .sidebar.show {
                left: 0;
            }
        }

        body {
            padding-top: 75px; /* Push the content down */
        }

        .controlnav {
            margin-top: 70px; /* Adjust as needed */
        }
    </style>
</head>
<body class="bg-light">

    <!-- Navbar -->
    <partial name="_NavPartial" />

    <!-- Sidebar Toggle Button (For Mobile) -->
    <div class="container d-md-none mt-3">
        <button class="btn btn-danger w-100" id="toggleSidebar">
            <i class="bi bi-list"></i> Menu
        </button>
    </div>

    <div class="container-fluid mt-4 controlnav">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 p-3">
                <div class="sidebar bg-white rounded p-3" id="sidebar">
                    <nav class="nav flex-column">
                        <a href="#" class="nav-link text-dark fw-semibold"><i class="bi bi-person-circle me-2"></i> My Account</a>
                        <a href="#" class="nav-link text-dark fw-semibold"><i class="bi bi-people me-2"></i> Travellers</a>
                        <a href="/Booking/Index" class="nav-link text-white fw-semibold bg-danger rounded px-3 py-2"><i class="bi bi-calendar-check me-2"></i> My Bookings</a>
                        <a href="#" class="nav-link text-dark fw-semibold"><i class="bi bi-lock me-2"></i> Change Password</a>
                        <a href="#" class="nav-link text-dark fw-semibold"><i class="bi bi-headset me-2"></i> Support</a>
                        <a href="#" class="nav-link text-dark fw-semibold"><i class="bi bi-box-arrow-left me-2"></i> Logout</a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="container">
                    <div class="row">
                        <!-- Booking Type Tabs -->
                        <div class="col-9 d-flex flex-wrap justify-content-center gap-2 mb-3">
                            <a href="/Booking/BookedHotelList" class="btn btn-outline-danger">Hotel</a>
                            <a href="/Booking/Index" class="btn btn-outline-danger">Visa</a>
                            <span class="btn btn-danger text-white">Tour</span>
                        </div>
                    </div>

                    <!-- Dynamic Page Content -->
                    <div class="mt-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <partial name="_footer" />

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("MainLayoutScript", false)

    <script>
        // Mobile Sidebar Toggle
        document.getElementById("toggleSidebar").addEventListener("click", function () {
            document.getElementById("sidebar").classList.toggle("show");
        });
    </script>

</body>
</html>




