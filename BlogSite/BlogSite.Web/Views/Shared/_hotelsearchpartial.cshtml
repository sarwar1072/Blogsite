<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Tabs</title>
    <style>
        .container {
            margin-top: 20px;
        }

        .hotel-card {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .hotel-card {
            width: 250px;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-img-top {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 14px;
            color: #555;
            margin-bottom: 15px;
        }

        .card-price {
            font-size: 16px;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 8px 12px;
            font-size: 14px;
            color: #fff;
            cursor: pointer;
            border-radius: 4px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>



</head>
<body>

    <div class="container">
        <h3 id="sectionTitle">Popular Hotel .Hay i am from search partial page</h3>
        <div id="hotelList" class="tour-cards"></div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // JavaScript for tab switching
        $(document).ready(function () {
            $("#btnHotel").click(function (e) {
                e.preventDefault();

                $.ajax({
                    type: "GET",
                    url: "/Home/GetListOfHotel", // Replace with the actual endpoint for fetching tours
                    contentType: "application/json",
                    success: function (data) {
                        renderHotels(data);
                    },
                    error: function (error) {
                        console.log("Error fetching tour data:", error);
                    }
                });
            });
        });

        function renderHotels(response) {
            const hotels = Array.isArray(response) ? response : response.hotels; // Adjust based on actual structure

            $("#hotelList").empty();

            if (Array.isArray(hotels)) {

                hotels.forEach(function (hotel) {
                    const hotelCard = `
                                        <div class="card hotel-card">
                                                    <img src="${hotel.hotelUrl}" alt="${hotel.Name}" class="card-img-top">
                                            <div class="card-body">
                                                        <p class="card-title">${hotel.name}</p>
                                                        <p class="card-text">${hotel.location}</p>
                                                <p class="card-price">Price: $${hotel.pricePerNight}</p>
                                                      <a href="#" class="btn btn-primary">
                                                         <i class="fas fa-book"></i> Book Now
                                                                </a>
                                            </div>
                                        </div>
                                    `;
                    $("#hotelList").append(hotelCard);
                });
            } else {
                console.error("Expected an array but received:", hotels);
            }
        }

    </script>

</body>
</html>


