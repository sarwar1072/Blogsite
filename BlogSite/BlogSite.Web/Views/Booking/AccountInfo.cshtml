@model UserInfoModel
@{
    ViewData["Title"] = "Account Info";
    Layout = "~/Views/Shared/_BookingLayout.cshtml";
}

<div class="container mt-5">
    <div class="card p-4 shadow-lg rounded-3" style="background-color: #ffffff;">
        <div class="d-flex align-items-center mb-4">
            <img src="profile.jpg" class="rounded-circle border border-3 border-primary me-3" alt="User Image" width="100" height="100">
            <div>
                <h4 class="mb-0 text-primary">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">User Profile</p>
            </div>
            <button class="btn btn-outline-danger ms-auto px-4">Edit Profile</button>
        </div>

        <hr class="mb-4">

        <div class="row">
            <div class="col-md-6">
                <h5 class="text-secondary">Personal Information</h5>
                <div class="p-3 bg-light rounded">
                    <p><strong>First Name:</strong> @Model.FirstName</p>
                    <p><strong>Last Name:</strong> @Model.LastName</p>
                    <p><strong>Gender:</strong> N/A</p>
                    <p><strong>Date of Birth:</strong> N/A</p>
                    <p><strong>Nationality:</strong> N/A</p>
                    <p><strong>Marital Status:</strong> N/A</p>
                    <p><strong>Religion:</strong> N/A</p>
                    <p><strong>Present Address:</strong> N/A</p>
                    <p><strong>Permanent Address:</strong> N/A</p>
                </div>
            </div>
            <div class="col-md-6">
                <h5 class="text-secondary">Contact Information</h5>
                <div class="p-3 bg-light rounded">
                    <p><strong>Mobile Number:</strong> N/A</p>
                    <p><strong>Mail Address:</strong> <a href="mailto:@Model.Email" class="text-decoration-none text-primary">@Model.Email</a></p>
                    <p><strong>Passport Number:</strong> N/A</p>
                    <p><strong>Passport Expiry Date:</strong> N/A</p>
                    <p><strong>Passport Image:</strong></p>
                    <div class="border p-3 text-center bg-white rounded shadow-sm" style="height: 150px;">
                        <span class="text-muted">No image to preview</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>