@model VisaBookingViewModel
@{
    ViewData["Title"] = "";
}

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

@section PageStyles
{
    <link href="~/css/bookingpagecss/bopagestyle.css" rel="stylesheet" />

}
<partial name="_TravelPartial" />

<div class="col-md-9">
    <h4 class="fw-bold text-dark mb-3"><i class="bi bi-clock-history"></i> Bookings</h4>
    @if (Model.UserForm.Any())
    {
        @foreach (var booking in Model.UserForm)
        {
            <div class="booking-card d-flex flex-column mb-4">

                <!-- Top Badges Section -->
                <div class="badge-container  mb-2">
                    <span class="badge bg-secondary">@booking.Visa.VisaType</span>
                    <span class="badge bg-secondary ms-2">@booking.Visa.VisaMode</span>
                    <span class="badge bg-secondary ms-2 ">@booking.Visa.EntryType</span>
                </div>

                <div class="d-flex align-items-center">
                    <!-- Left Image -->
                    <div class="col-md-3">
                        <img src="@booking.Visa.CardUrl" alt="Tour Image" class="img-fluid">
                    </div>

                    <!-- Right Details -->
                    <div class="booking-details col-md-9">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-1">
                                <i class="bi bi-airplane"></i> @booking.Visa.Destination Visa
                            </h6>
                            <span class="badge rounded-pill bg-warning">@booking.ProcessStatus</span>
                        </div>
                        <p class="text-muted mb-1"><i class="bi bi-telephone"></i> @booking.Phone</p>
                        <p class="text-muted mb-1"><i class="bi bi-envelope"></i> @booking.Email</p>
                        <p class="text-muted mb-1">
                            <i class="bi bi-calendar-event"></i> <strong>Departure Date:</strong> @booking.DepartureDate?.ToString("ddd, dd MMM yyyy")
                        </p>
                        <p class="text-muted mb-1">
                            <i class="bi bi-calendar-event"></i> <strong>Requested Date:</strong> @DateTime.Today.ToString("ddd, dd MMM yyyy")
                        </p>
                        <button class="btn btn-view-details">
                            <i class="bi bi-eye"></i> View Details
                        </button>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div class="alert alert-warning text-center p-4">
            <h4>No Bookings Found</h4>
            <p>It looks like you haven’t booked anything yet.</p>
            <a href="@Url.Action("Index", "Visa")" class="btn btn-danger mt-2">Browse Visas</a>
        </div>

    }
</div>
