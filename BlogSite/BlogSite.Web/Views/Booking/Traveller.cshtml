@model TravelModel

@{
    ViewData["Title"] = "Traveller";
    Layout = "~/Views/Shared/_BookingLayout.cshtml";

}

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-8">
        <h2 class="text-center mb-4">Traveller Section</h2>
        <!-- Add Traveller Button -->
        <div class="text-center">
            <button class="btn btn-primary mb-3 px-4" id="showFormBtn">+ Add Traveller</button>
        </div>
        <!-- Traveller Form (Initially Hidden) -->
        <div id="travellerForm" class="card shadow-lg p-4 mb-4 bg-white rounded" style="display: none;">
            <h4 class="text-center">Add Traveller</h4>
            <form id="travellerFormElement">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Name:</label>
                        <input type="text" class="form-control" id="name" name="Name" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email" name="Email" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Passport Number:</label>
                        <input type="text" class="form-control" id="passNo" name="PassportNo" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Phone:</label>
                        <input type="text" class="form-control" id="phone" name="Phone" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Date Of Birth:</label>
                        <input type="date" class="form-control" id="dateOfbirth" name="DateOfBirth" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Expire Date:</label>
                        <input type="date" class="form-control" id="expireDate" name="ExpireDate" required>
                    </div>
                    
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Add</button>
                </div>
            </form>
        </div>

        <!-- Traveller List -->
        <h4 class="text-center mt-4">Traveller List</h4>
        <div id="travellerList" class="mt-3">
@*             @Html.Partial("_ListOfTravellerpartial",)
