@model VisaBookingViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="container mt-4">
    <h2 class="mb-4">My Bookings</h2>

    @if (Model.GetBookingById != null )
    {
        <div class="row">
            @foreach (var booking in Model.UserForm)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-airplane"></i> @booking.Visa.Destination Visa</h5>
                            <p class="card-text"><strong>Phone:</strong> @booking.Phone</p>
                            <p class="card-text"><strong>Email:</strong> @booking.Email</p>
                            <p class="card-text"><strong>Departure Date:</strong> @booking.DepartureDate</p>
                            <p class="card-text"><strong>Visa Type:</strong> @booking.Visa.VisaType</p>
                            <p class="card-text"><strong>Visa Mode:</strong> @booking.Visa.VisaMode</p>
                            <p class="card-text"><strong>Entry Type:</strong> @booking.Visa.EntryType</p>
                            <button class="btn btn-primary"><i class="bi bi-eye"></i> View Details</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No bookings found.
        </div>
    }
</div>
